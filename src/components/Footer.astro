---
import Icon from "../components/Icon.astro";
---

<footer class="footer">
    <div class="wrapper">
        <div class="footer-content">
            <div class="footer-left">
                <p class="footer-text">
                    Say hey! :) tortaepaisitphongse@gmail.com
                </p>
            </div>
            <div class="footer-right">
                <a
                    href="https://www.linkedin.com/in/ctae/"
                    class="footer-link"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    LinkedIn <Icon icon="linkedin-logo" size="1.33em" />
                </a>
                <a href="/resume/" class="footer-link">
                    Resume <Icon
                        icon="document"
                        size="1.33em"
                        viewBox="0 0 32 24"
                    />
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        padding: 3rem 0;
        margin-top: 4rem;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
        width: 100%;
        min-height: 50px;
    }

    .footer-left {
        flex: 1;
    }

    .footer-text {
        font-size: 1.2rem;
        color: var(--black);
        margin: 0;
    }

    .footer-right {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .footer-link {
        font-size: 1.1rem;
        color: var(--black);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer-link:hover {
        color: var(--link-color);
    }

    /* Mobile styles */
    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            align-items: flex-start;
            gap: 1.5rem;
        }

        .footer-right {
            gap: 1.5rem;
        }

        .footer-text {
            font-size: 1.1rem;
        }

        .footer-link {
            font-size: 1rem;
        }
    }

    /* Ensure flex layout works on desktop */
    @media (min-width: 769px) {
        .footer-content {
            flex-direction: row;
        }
    }
</style>
