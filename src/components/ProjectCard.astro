---
export interface Props {
    slug: string;
    title: string;
    description: string;
    tags: string[];
    image: string;
    bgColor: string;
}

const { slug, title, description, tags, image, bgColor } = Astro.props;
---

<a href={`/work/${slug}`} class="project-link">
    <article class={`project-card ${bgColor}`}>
        <div class="project-image">
            <img src={image} alt={title} />
        </div>
        <div class="project-content">
            <h2 class="project-title">{title}</h2>
            <p class="project-description">{description}</p>
            <div class="project-tags">
                {tags.map((tag) => <span class="tag">{tag}</span>)}
            </div>
        </div>
    </article>
</a>

<style>
    .project-link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }

    .project-card {
        border-radius: 1.5rem;
        padding: 2rem;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        min-height: 500px;
        max-width: 625px;
    }

    .project-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .project-card.orange {
        background: linear-gradient(135deg, #fff5e6 0%, #ffe4b3 100%);
    }

    .project-card.purple {
        background: linear-gradient(135deg, #2d1b69 0%, #1a0f3d 100%);
        color: white;
    }

    .project-card.blue {
        background: linear-gradient(135deg, #e6f3ff 0%, #b3d9ff 100%);
    }

    .project-card.pink {
        background: linear-gradient(135deg, #ffe6f3 0%, #ffb3d9 100%);
    }

    .project-card.green {
        background: linear-gradient(135deg, #e6fff0 0%, #b3ffcc 100%);
    }

    .project-image {
        margin-bottom: 1.5rem;
        border-radius: 1rem;
        overflow: hidden;
        height: 200px; /* Standardized image height */
        flex-shrink: 0;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .project-card:hover .project-image img {
        transform: scale(1.05);
    }

    .project-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .project-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .project-description {
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        opacity: 0.9;
        flex: 1;
    }

    .project-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: auto;
    }

    .tag {
        background: rgba(255, 255, 255, 0.7);
        color: var(--gray-700);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        white-space: nowrap;
    }

    .project-card.purple .tag {
        background: rgba(255, 255, 255, 0.2);
        color: rgba(255, 255, 255, 0.9);
    }

    @media (max-width: 768px) {
        .project-card {
            padding: 1.5rem;
            min-height: 400px;
        }

        .project-image {
            height: 160px;
        }

        .project-title {
            font-size: 1.25rem;
        }
    }
</style>
