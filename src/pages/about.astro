<script define:vars={{ boardImages, photoDescriptions }}>
    document.addEventListener("DOMContentLoaded", function () {
        const introParagraphs = document.querySelectorAll(
            ".intro-text-paragraph"
        );

        if (introParagraphs.length > 0) {
            introParagraphs.forEach((paragraph, index) => {
                setTimeout(
                    () => {
                        paragraph.classList.add("animate");
                    },
                    400 + index * 150
                );
            });
        }

        const photos = document.querySelectorAll(".photo");
        const modal = document.getElementById("modal");
        const modalImage = document.getElementById("modalImage");
        const modalDescription = document.getElementById("modalDescription");
        const closeBtn = document.getElementById("closeModal");

        const photoImages = document.querySelectorAll(".photo-img");
        photoImages.forEach((img) => {
            const container = img.closest(".photo");

            if (img.complete && img.naturalHeight !== 0) {
                img.classList.add("loaded");
                container.classList.add("image-loaded");
            } else {
                img.addEventListener("load", () => {
                    img.classList.add("loaded");
                    container.classList.add("image-loaded");
                });

                img.addEventListener("error", () => {
                    container.classList.add("image-loaded");
                    console.log("Image failed to load");
                });
            }
        });

        photos.forEach((photo) => {
            photo.addEventListener("click", function () {
                const photoIndex = parseInt(this.dataset.photo);
                const img = this.querySelector(".photo-img");

                if (img && boardImages[photoIndex]) {
                    modalImage.src = img.src;
                    modalDescription.textContent =
                        photoDescriptions[photoIndex] || "A wonderful memory!";
                    modal.classList.add("active");
                }
            });
        });

        function closeModal() {
            modal.classList.remove("active");
        }

        closeBtn.addEventListener("click", closeModal);
        modal.addEventListener("click", function (e) {
            if (e.target === modal) {
                closeModal();
            }
        });

        document.addEventListener("keydown", function (e) {
            if (e.key === "Escape") {
                closeModal();
            }
        });

        // Role-based skill highlighting
        const roleButtons = document.querySelectorAll(".role-button");
        const skillBadges = Array.from(document.querySelectorAll(".skill-badge"));
        let activeRole = null;
        let clickedRole = null; // Track clicked role for mobile persistence
        
        function updateRoleSkills(role) {
            skillBadges.forEach(badge => {
                badge.classList.remove("role-active");
            });
            roleButtons.forEach(button => {
                button.classList.remove("active");
            });
            
            if (!role) {
                // Preserve clicked role on mobile when hover ends
                if (!clickedRole) {
                    activeRole = null;
                    return;
                }
                role = clickedRole;
            }
            
            activeRole = role;
            
            const button = document.querySelector(`.role-button[data-role="${role}"]`);
            if (button) {
                button.classList.add("active");
            }
            
            skillBadges.forEach((badge) => {
                const roles = badge.getAttribute("data-roles");
                if (roles && roles.includes(role)) {
                    badge.classList.add("role-active");
                }
            });
        }
        
        roleButtons.forEach((button) => {
            button.addEventListener("click", function (e) {
                e.preventDefault();
                const role = this.getAttribute("data-role");
                
                // Toggle selection
                if (clickedRole === role) {
                    clickedRole = null;
                    updateRoleSkills(null);
                } else {
                    clickedRole = role;
                    updateRoleSkills(role);
                }
            });
            
            button.addEventListener("mouseenter", function () {
                const role = this.getAttribute("data-role");
                updateRoleSkills(role);
            });
            
            button.addEventListener("mouseleave", function () {
                // Restore clicked role on mobile, or clear on desktop
                if (!clickedRole) {
                    updateRoleSkills(null);
                } else {
                    updateRoleSkills(clickedRole);
                }
            });
        });
        
        // Staggered jiggle animation to encourage interaction
        roleButtons.forEach((button, index) => {
            const initialDelay = Math.random() * 3000 + (index * 500);
            
            function triggerJiggle() {
                button.classList.add("jiggle");
                setTimeout(() => {
                    button.classList.remove("jiggle");
                }, 500);
                
                // Random interval between 8-15 seconds
                const nextJiggle = 8000 + Math.random() * 7000;
                setTimeout(triggerJiggle, nextJiggle);
            }
            
            setTimeout(triggerJiggle, initialDelay);
        });
        

    });
</script>
