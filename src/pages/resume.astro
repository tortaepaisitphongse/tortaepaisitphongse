---
import Layout from "../layouts/Layout.astro";
import ExperienceCard from "../components/ExperienceCard.astro";

// Experience data - chronological order (most recent first)
const experiences = [
    {
        title: "College Teaching Assistant",
        company: "Database Design & Development",
        period: "August 2025 - Present",
        employmentType: "Part-time",
        description:
            "Support 150+ students by leading weekly labs and office hours focused on SQL, MongoDB, schema design, and query optimization. Mentor project teams translating business requirements into complete data models, reinforcing real-world data engineering and consulting skills.",
        bgColor: "blue",
    },
    {
        title: "Business Analyst",
        company: "Accenture",
        period: "June 2025 - August 2025",
        employmentType: "Internship",
        description:
            "Supported a large-scale banking transformation project by analyzing operational, financial, and risk processes to identify efficiency opportunities. Contributed to the design of data-driven operating models that enhanced productivity, decision visibility, and customer-centric performance management.",
        bgColor: "purple",
    },
    {
        title: "Data Solutions Intern",
        company: "Hexa Tech Solutions",
        period: "January 2025 - April 2025",
        employmentType: "Internship",
        description:
            "Developed a predictive maintenance pipeline using ARIMA forecasting and XGBoost anomaly detection, deployed via AWS with real-time dashboards for risk monitoring. Benchmarked and recommended data cleaning tools that accelerated preprocessing workflows and informed C-suite adoption decisions.",
        bgColor: "orange",
    },
    {
        title: "Tartan Ambassador",
        company: "Carnegie Mellon University Welcome Center",
        period: "August 2023 - Present",
        description:
            "I led 3-4 tours weekly, guiding groups of 15-20 visitors and using strong communication skills to engage and inform diverse audiences. Additionally, I hosted virtual events and discussion panels to foster engagement and promote Carnegie Mellon's brand stories. By participating in weekly meetings, I collaborated with team members to reflect on and enhance the visitor experience, driving continuous improvement and ensuring a positive, memorable experience for all attendees.",
        bgColor: "green",
    },
    {
        title: "Outreach and Program Coordinator",
        company: "Charles Street Area Corporation",
        period: "May 2024 - December 2024",
        employmentType: "Part-time",
        location: "Pittsburgh, PA",
        description:
            "Led outreach for Juneteenth Community Day and the Cross-Strauss Parklet reopening with Mayor Ed Gainey and state reps, managing event logistics and community engagement. Revamped the website for accessibility and SEO, launched a 311 community portal, and automated newsletters via MailChimp. Secured a $100K Pittsburgh Foundation grant and authored an internal technical-skills handbook. Promoted from Administrative Intern to Program Coordinator.",
        bgColor: "pink",
    },
];
---

<Layout>
    <main class="experience-page">
        <div class="wrapper">
            <div class="page-header">
                <h1>Experience</h1>
            </div>
            <div class="experiences-list">
                {
                    experiences.map((experience) => (
                        <ExperienceCard
                            title={experience.title}
                            company={experience.company}
                            period={experience.period}
                            description={experience.description}
                            employmentType={experience.employmentType}
                            location={experience.location}
                        />
                    ))
                }
            </div>
        </div>
    </main>
</Layout>

<style>
    .experience-page {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .page-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .page-header h1 {
        font-size: var(--text-4xl);
        font-weight: 700;
    }

    .experiences-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        max-width: 900px;
        margin: 0 auto;
    }

    @media (max-width: 768px) {
        .page-header h1 {
            font-size: var(--text-3xl);
        }

        .experiences-list {
            gap: 1.5rem;
        }
    }
</style>
