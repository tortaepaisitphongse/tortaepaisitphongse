---
import Layout from "../../layouts/Layout.astro";
import ContentBlock from "../../components/ContentBlock.astro";
import projectsData from "../../content/projects/projects.json";

export async function getStaticPaths() {
    return projectsData.projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;

const currentIndex = projectsData.projects.findIndex(
    (p) => p.slug === project.slug
);
const nextProject =
    currentIndex < projectsData.projects.length - 1
        ? projectsData.projects[currentIndex + 1]
        : null;
---

<Layout>
    <main class="project-detail">
        <div class="container">
            {
                project.image && (
                    <div class="project-hero">
                        <img src={project.image} alt={project.title} />
                    </div>
                )
            }

            <header class="project-header">
                <h1 class="project-title">{project.title}</h1>
                <p class="project-description">{project.description}</p>

                <div class="project-meta-grid">
                    <div class="meta-item">
                        <div class="meta-label">Role</div>
                        <div class="meta-value">{project.meta.role}</div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Tools/Skills</div>
                        <div class="meta-value">
                            {
                                Array.isArray(project.meta.tools)
                                    ? project.meta.tools.join(", ")
                                    : project.meta.tools
                            }
                        </div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Team</div>
                        <div class="meta-value">{project.meta.team}</div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Duration</div>
                        <div class="meta-value">{project.meta.duration}</div>
                    </div>
                </div>
            </header>

            <div class="project-content">
                {
                    project.content?.map((block) => (
                        <ContentBlock
                            block={block}
                            projectSlug={project.slug}
                        />
                    ))
                }
            </div>

            {
                project.slug === "portfolio-website" && (
                    <section class="repository-section">
                        <a
                            href="https://github.com/tortaepaisitphongse/tortaepaisitphongse.git"
                            class="repository-link"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            Check out my repository
                        </a>
                    </section>
                )
            }

            {
                nextProject && (
                    <section class="next-project-section">
                        <h2 class="next-project-heading">Next project</h2>
                        <a
                            href={`/work/${nextProject.slug}`}
                            class="next-project-card"
                        >
                            <h3 class="next-project-title">
                                {nextProject.title}
                            </h3>
                            <div class="next-project-tags">
                                {nextProject.tags.map((tag) => (
                                    <span class="next-project-tag">{tag}</span>
                                ))}
                            </div>
                            <p class="next-project-description">
                                {nextProject.description}
                            </p>
                        </a>
                    </section>
                )
            }
        </div>
    </main>
</Layout>

<style>
    .project-detail {
        padding: 3rem 0 6rem;
        min-height: calc(100vh - 80px);
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .back-button {
        display: inline-block;
        color: var(--gray-500);
        text-decoration: none;
        margin-bottom: 4rem;
        font-weight: 500;
        font-size: var(--text-base);
        transition: color 0.2s ease;
    }

    .back-button:hover {
        color: var(--gray-0);
    }

    .project-header {
        margin-bottom: 4rem;
    }

    .project-hero {
        margin-bottom: 4rem;
        border-radius: 0;
        overflow: hidden;
    }

    .project-hero img {
        width: 100%;
        height: auto;
        display: block;
    }

    .project-title {
        font-size: var(--text-3xl);
        font-weight: 600;
        margin-bottom: 1.5rem;
        line-height: 1.3;
        color: var(--gray-0);
        letter-spacing: -0.02em;
    }

    .project-description {
        font-size: var(--text-base);
        margin-bottom: 2.5rem;
        line-height: 1.7;
        color: var(--gray-100);
        max-width: 85ch;
        font-weight: 400;
    }

    .project-meta-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0;
        margin-top: 2.5rem;
        border-top: 1px solid var(--gray-200);
        border-bottom: 1px solid var(--gray-200);
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding: 1.5rem 1.25rem;
        border-right: 1px solid var(--gray-200);
    }

    .meta-item:last-child {
        border-right: none;
    }

    .meta-label {
        font-size: var(--text-sm);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--gray-500);
    }

    .meta-value {
        font-size: var(--text-base);
        color: var(--gray-200);
        line-height: 1.6;
        font-weight: 400;
    }

    .project-content {
        line-height: 1.7;
        margin-bottom: 6rem;
    }

    .next-project-section {
        padding-top: 5rem;
        border-top: 1px solid var(--gray-200);
        margin-top: 5rem;
    }

    .next-project-heading {
        font-size: var(--text-sm);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--gray-500);
        margin-bottom: 2rem;
    }

    .next-project-card {
        display: block;
        text-decoration: none;
        padding: 2rem 0;
        border-bottom: 1px solid var(--gray-200);
        transition: all 0.2s ease;
        background: transparent;
    }

    .next-project-card:hover {
        border-bottom-color: var(--gray-300);
    }

    .next-project-title {
        font-size: var(--text-2xl);
        font-weight: 700;
        color: var(--gray-0);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .next-project-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .next-project-tag {
        background: var(--gray-100);
        color: var(--gray-400);
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        font-size: var(--text-sm);
        font-weight: 500;
    }

    .next-project-description {
        font-size: var(--text-base);
        line-height: 1.6;
        color: var(--gray-300);
        margin: 0;
    }

    .repository-section {
        padding-top: 5rem;
        border-top: 1px solid var(--gray-200);
        margin-top: 5rem;
        text-align: center;
    }

    .repository-link {
        display: inline-block;
        padding: 0.75rem 2rem;
        background-color: var(--black);
        color: var(--white);
        text-decoration: none;
        font-size: var(--text-base);
        font-weight: 500;
        transition: all 0.2s ease;
        border-radius: 0.25rem;
    }

    .repository-link:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1.5rem;
        }

        .project-detail {
            padding: 2rem 0 4rem;
        }

        .project-title {
            font-size: var(--text-2xl);
        }

        .project-description {
            font-size: var(--text-sm);
        }

        .project-meta-grid {
            grid-template-columns: repeat(2, 1fr);
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            border: 1px solid var(--gray-200);
        }

        .meta-item {
            padding: 1.25rem 1rem;
            border-right: 1px solid var(--gray-200);
            border-bottom: 1px solid var(--gray-200);
            text-align: center;
        }

        .meta-item:nth-child(2n) {
            border-right: none;
        }

        .meta-item:nth-last-child(-n + 2) {
            border-bottom: none;
        }

        .project-hero {
            margin-bottom: 2rem;
        }

        .project-content {
            margin-bottom: 4rem;
        }

        .next-project-section {
            padding-top: 4rem;
            margin-top: 4rem;
        }

        .next-project-card {
            padding: 2rem;
        }

        .next-project-title {
            font-size: var(--text-xl);
        }
    }
</style>
